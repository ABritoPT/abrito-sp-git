<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.test.MainActivity" >

    <TextView
        android:id="@+id/textHeaderRewardedVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonShowMOW"
        android:layout_marginTop="16dp"
        android:text="@string/rewarded_video"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonShowMOW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonCheckDelta"
        android:onClick="onButtonShowMOWClick"
        android:text="@string/offer_wall" />

    <Button
        android:id="@+id/buttonRVCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textHeaderRewardedVideo"
        android:layout_below="@+id/textHeaderRewardedVideo"
        android:layout_toLeftOf="@+id/buttonRVPlay"
        android:onClick="onButtonRVCheck"
        android:text="@string/check" />

    <TextView
        android:id="@+id/textCreditInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonCheckDelta"
        android:layout_alignBottom="@+id/buttonCheckDelta"
        android:layout_alignLeft="@+id/textHeaderRewardedVideo"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/buttonCheckDelta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:onClick="onButtonCheckDelta"
        android:text="@string/check_credit_delta" />

    <Button
        android:id="@+id/buttonRVPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonCheckDelta"
        android:layout_alignRight="@+id/buttonCheckDelta"
        android:layout_below="@+id/textHeaderRewardedVideo"
        android:layout_marginLeft="24dp"
        android:onClick="onButtonRVPlay"
        android:text="@string/play" />

    <TextView
        android:id="@+id/textHeaderInterstitialAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonRVCheck"
        android:layout_below="@+id/buttonRVCheck"
        android:layout_marginTop="20dp"
        android:text="@string/interstitial_ad"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonInterstitialCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textHeaderInterstitialAd"
        android:layout_alignRight="@+id/buttonRVCheck"
        android:layout_below="@+id/textHeaderInterstitialAd"
        android:onClick="onButtonInterstitialCheck"
        android:text="@string/check" />

    <Button
        android:id="@+id/buttonInterstitialShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonInterstitialCheck"
        android:layout_alignBottom="@+id/buttonInterstitialCheck"
        android:layout_alignLeft="@+id/buttonRVPlay"
        android:layout_alignRight="@+id/buttonRVPlay"
        android:onClick="onButtonInterstitialShow"
        android:text="@string/show" />

</RelativeLayout>